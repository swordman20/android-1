<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="2">

    <com.andexert.library.RippleView
        android:id="@+id/rippleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        ripple:rv_centered="false">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#2050aa"
            android:gravity="center"
            android:padding="25dp"
            android:text="Common Method Examples"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </com.andexert.library.RippleView>

    <Button
        android:id="@+id/btnDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rippleview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="#558899"
        android:padding="@dimen/abc_action_bar_default_padding_material"
        android:text="View Demo"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_action_button_min_height_material"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCodeSnip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDemo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="#558899"
        android:padding="@dimen/abc_action_bar_default_padding_material"
        android:text="Code Snippest"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_action_button_min_height_material"
        android:textStyle="bold" />


</RelativeLayout><!-- From: file:/F:/Workspace/CommonSDK/Multidots/android/utils/src/main/res/layout/activity_home.xml -->